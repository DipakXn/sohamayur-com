<section class="content-video-section">
  <div class="content-video-wrapper">
    <div class="video-side">
      {% if section.settings.video_url != blank %}
        <div class="video-container">
          <iframe src="{{ section.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
        </div>
      {% endif %}
    </div>
    <div class="content-side">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.content }}</p>
    </div>
  </div>
</section>

<style>
  .content-video-section {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }
  .content-video-wrapper {
    display: flex;
    width: 100%;
    max-width: 1300px;
    flex-direction: row;
  }
  .content-side, .video-side {
    flex: 1;
    padding: 20px;
  }
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #000;
  }
  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 767px) {
    .content-video-wrapper {
      flex-direction: column;
    }
    .content-video-section {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0px;
  }
    .content-side, .video-side {
    flex: 1;
    padding: 15px;
}
  }
</style>

{% schema %}
{
  "name": "Content and Video Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Your content goes here."
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "default": "https://www.youtube.com/embed/example"
    }
  ],
  "presets": [
    {
      "name": "Content and Video",
      "category": "Custom"
    }
  ]
}
{% endschema %}

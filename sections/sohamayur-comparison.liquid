<style>
  :root {
    --soha-gold: #F3A82E;
    --soha-green: #435E49;
    --soha-yellow: #FFEC00;
    --soha-brown: #471200;
    --soha-cream: #FCF4EA;
    --soha-teal: #23E8DE;
    --soha-lavender: #D3D2FF;
    --soha-blue: #8AC7FF;
    --soha-lime: #41AF00;
    --soha-orange: #E86300;
    --soha-peach: #FCE0BB;
    --soha-lemon: #FFFCBB;
    --soha-mint: #DDFCC2;
  }

  .soha-comparison {
    background: linear-gradient(135deg, var(--soha-cream) 0%, #fff 100%);
    padding: 80px 20px;
    position: relative;
    overflow: hidden;
  }

  .soha-comparison::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(243, 168, 46, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .soha-comparison__container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .soha-comparison__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .soha-comparison__subtitle {
    color: var(--soha-gold);
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 16px;
    display: block;
  }

  .soha-comparison__title {
    font-size: clamp(32px, 5vw, 48px);
    color: var(--soha-brown);
    font-weight: 600;
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .soha-comparison__description {
    color: #666;
    font-size: 16px;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .soha-comparison__table-wrapper {
    background: white;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(67, 94, 73, 0.1);
    overflow: hidden;
    border: 1px solid rgba(67, 94, 73, 0.08);
  }

  .soha-comparison__table {
    width: 100%;
    border-collapse: collapse;
  }

  .soha-comparison__thead {
    background: var(--soha-green);
  }

  .soha-comparison__th {
    padding: 24px 20px;
    color: white;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .soha-comparison__th:first-child {
    text-align: left;
    width: 25%;
    padding-left: 32px;
  }

  .soha-comparison__th:nth-child(2),
  .soha-comparison__th:nth-child(3) {
    text-align: center;
    width: 37.5%;
  }

  .soha-comparison__row {
    border-bottom: 1px solid rgba(67, 94, 73, 0.08);
    transition: all 0.3s ease;
  }

  .soha-comparison__row:hover {
    background: rgba(252, 244, 234, 0.5);
  }

  .soha-comparison__row:last-child {
    border-bottom: none;
  }

  .soha-comparison__td {
    padding: 18px 10px;
    vertical-align: middle;
  }

  .soha-comparison__feature {
    font-weight: 600;
    color: var(--soha-brown);
    font-size: 15px;
    padding-left: 32px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .soha-comparison__feature-icon {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--soha-peach) 0%, var(--soha-cream) 100%);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .soha-comparison__feature-icon svg {
    width: 18px;
    height: 18px;
    stroke: var(--soha-green);
  }

  .soha-comparison__cell {
    text-align: left;
    font-size: 14px;
    line-height: 1.5;
  }

  .soha-comparison__cell--sohamayur {
    background: rgba(35, 232, 222, 0.05);
    color: var(--soha-green);
    font-weight: 500;
  }

  .soha-comparison__cell--generic {
    color: #888;
    background: rgba(0, 0, 0, 0.02);
  }

  .soha-comparison__check {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
  }

  .soha-comparison__icon {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .soha-comparison__icon--check {
    background: var(--soha-green);
    color: white;
  }

  .soha-comparison__icon--cross {
    background: rgba(232, 99, 0, 0.15);
    color: var(--soha-orange);
  }

  .soha-comparison__icon svg {
    width: 14px;
    height: 14px;
  }

  .soha-comparison__badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--soha-gold) 0%, #e8951a 100%);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    margin-left: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .soha-comparison {
      padding: 60px 16px;
    }

    .soha-comparison__table-wrapper {
      border-radius: 16px;
      overflow-x: auto;
    }

    .soha-comparison__table {
      min-width: 600px;
    }

    .soha-comparison__th,
    .soha-comparison__td {
      padding: 20px 16px;
      font-size: 13px;
    }

    .soha-comparison__feature {
      padding-left: 16px;
      font-size: 13px;
    }

    .soha-comparison__feature-icon {
      width: 32px;
      height: 32px;
    }

    .soha-comparison__title {
      font-size: 28px;
    }
  }

  /* Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .soha-comparison__row {
    animation: fadeInUp 0.6s ease forwards;
  }

  .soha-comparison__row:nth-child(1) { animation-delay: 0.1s; }
  .soha-comparison__row:nth-child(2) { animation-delay: 0.15s; }
  .soha-comparison__row:nth-child(3) { animation-delay: 0.2s; }
  .soha-comparison__row:nth-child(4) { animation-delay: 0.25s; }
  .soha-comparison__row:nth-child(5) { animation-delay: 0.3s; }
  .soha-comparison__row:nth-child(6) { animation-delay: 0.35s; }
  .soha-comparison__row:nth-child(7) { animation-delay: 0.4s; }
</style>


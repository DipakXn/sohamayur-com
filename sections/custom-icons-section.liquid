{% schema %}
{
  "name": "Custom Icons Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Features"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Icon 1"
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "Text for Icon 1",
      "default": "Feature 1"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Icon 2"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text for Icon 2",
      "default": "Feature 2"
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Icon 3"
    },
    {
      "type": "text",
      "id": "text_3",
      "label": "Text for Icon 3",
      "default": "Feature 3"
    },
    {
      "type": "image_picker",
      "id": "icon_4",
      "label": "Icon 4"
    },
    {
      "type": "text",
      "id": "text_4",
      "label": "Text for Icon 4",
      "default": "Feature 4"
    },
    {
      "type": "image_picker",
      "id": "icon_5",
      "label": "Icon 5"
    },
    {
      "type": "text",
      "id": "text_5",
      "label": "Text for Icon 5",
      "default": "Feature 5"
    }
  ],
  "presets": [
    {
      "name": "Custom Icons Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-icons-section">
  <h2>{{ section.settings.heading }}</h2>
  <div class="icons-wrapper">
    <div class="icon-item">
      <img src="{{ section.settings.icon_1 | img_url: '300x300' }}" alt="{{ section.settings.text_1 }}">
      <p>{{ section.settings.text_1 }}</p>
    </div>
    <div class="icon-item">
      <img src="{{ section.settings.icon_2 | img_url: '300x300' }}" alt="{{ section.settings.text_2 }}">
      <p>{{ section.settings.text_2 }}</p>
    </div>
    <div class="icon-item">
      <img src="{{ section.settings.icon_3 | img_url: '300x300' }}" alt="{{ section.settings.text_3 }}">
      <p>{{ section.settings.text_3 }}</p>
    </div>
    <div class="icon-item">
      <img src="{{ section.settings.icon_4 | img_url: '300x300' }}" alt="{{ section.settings.text_4 }}">
      <p>{{ section.settings.text_4 }}</p>
    </div>
    <div class="icon-item">
      <img src="{{ section.settings.icon_5 | img_url: '300x300' }}" alt="{{ section.settings.text_5 }}">
      <p>{{ section.settings.text_5 }}</p>
    </div>
  </div>
</div>

<style>
.custom-icons-section {
  text-align: center;
  padding: 20px;
}
.custom-icons-section .icons-wrapper {
  display: flex;
  justify-content: center;
  gap: 70px;
}
.custom-icons-section .icon-item {
  flex: 1;
  max-width: 200px;
}
.custom-icons-section .icon-item img {
  max-width: 100%;
  height: auto;
}
.custom-icons-section .icon-item p {
  margin-top: 10px;
}
</style>

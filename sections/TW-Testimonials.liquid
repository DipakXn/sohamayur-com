<br>
  <div class="Header h2 TW-header font-size-fix">
  {{ section.settings.testimonialsheading }}
  </div>
 <br>
   <div class="testimonial-slider ">    
  {% for block in section.blocks %}
   
<div class="testimonials_inner ti-{{ forloop.index }}">
  <div class="testim_user_img">
      <img src=" {{ block.settings.customer-image | img_url: '140x' }} " alt="" height="auto" width="auto" >
  </div>
  <h5>{{ block.settings.name-text }}
              &nbsp;
<span>{{ block.settings.designation-text }}</span>
  </h5>
      <sup class="quote up">“</sup>
      <p class="review-text">{{ block.settings.review-text }}</p>
      <sub class="quote dwn">”</sub></div>
    
    {% endfor %}
    </div>

<script>
  
  $('#shopify-section-{{section.id}} .testimonial-slider').slick({
         arrows:false,
         infinite: true,
         swipe: true,
         slidesToShow: 3,
         slidesToScroll: 3,
         responsive: [               
               {
                 breakpoint: 750,
                 settings: {
                   slidesToShow: 1,
                   slidesToScroll: 1,
                   dots: true,
                  arrows: false,
                  autoplay: false,
                  autoplaySpeed: 1000,
                  infinite: true,
                 }
               }
             ]
     })

</script>
{% schema %}
{
  "name": "TW-Testimonials",
  "settings": [
    {
       "type": "richtext",
       "id": "testimonialsheading",
       "label": "Add Heading "
     }
  ],
  "presets": [
      {
        "name": "TW-Testimonials"
      }
  ],
      "blocks": [
   {
     "name": "User Testimonial",
     "type": "slide",
     "settings": [
       {
        "type": "image_picker",
        "id": "customer-image",
        "label": "Add image"
       },
       {
        "type": "textarea",
        "id": "review-text",
        "label": "Add review"
       },
       {
        "type": "text",
        "id": "name-text",
        "label": "Add Name"
       },
       {
        "type": "text",
        "id": "designation-text",
        "label": "Add Designation"
       }
     ]
   }
]
}
{% endschema %}

